<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7A9E9F"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/boardid"
        android:layout_width="330dp"
        android:layout_height="450dp"
        app:cardBackgroundColor="#4F6367"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/coord00"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:background="#4F6367"
                android:foregroundGravity="center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/empty"
                android:textColor="#FE5F55"
                android:textSize="75sp"
                app:layout_column="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_row="0" />

            <View
                android:id="@+id/divider6"
                android:layout_width="100dp"
                android:layout_height="15dp"
                android:background="#EEF5DB"
                app:layout_column="4"
                app:layout_constraintStart_toEndOf="@+id/divider5"
                app:layout_constraintTop_toBottomOf="@+id/coord11"
                app:layout_row="1" />

            <View
                android:id="@+id/divider10"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="#EEF5DB"
                app:layout_column="1"
                app:layout_constraintStart_toEndOf="@+id/divider13"
                app:layout_constraintTop_toBottomOf="@+id/divider16"
                app:layout_row="3" />

            <View
                android:id="@+id/divider12"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="#EEF5DB"
                app:layout_column="3"
                app:layout_constraintStart_toEndOf="@+id/divider6"
                app:layout_constraintTop_toBottomOf="@+id/divider1"
                app:layout_row="3" />

            <View
                android:id="@+id/divider14"
                android:layout_width="100dp"
                android:layout_height="15dp"
                android:background="#EEF5DB"
                app:layout_column="4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/coord01"
                app:layout_row="3" />

            <View
                android:id="@+id/divider16"
                android:layout_width="15dp"
                android:layout_height="140dp"
                android:background="#EEF5DB"
                app:layout_column="3"
                app:layout_constraintStart_toEndOf="@+id/coord00"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_row="4" />

            <TextView
                android:id="@+id/coord10"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:background="#4F6367"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/empty"
                android:textColor="#FE5F55"
                android:textSize="75sp"
                app:layout_column="2"
                app:layout_constraintStart_toEndOf="@+id/divider16"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_row="0" />

            <View
                android:id="@+id/divider13"
                android:layout_width="100dp"
                android:layout_height="15dp"
                android:background="#EEF5DB"
                app:layout_column="2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/coord00"
                app:layout_row="3" />

            <View
                android:id="@+id/divider2"
                android:layout_width="100dp"
                android:layout_height="15sp"
                android:background="#EEF5DB"
                app:layout_column="0"
                app:layout_constraintStart_toEndOf="@+id/divider10"
                app:layout_constraintTop_toBottomOf="@+id/coord10"
                app:layout_row="1" />

            <TextView
                android:id="@+id/coord20"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:background="#4F6367"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/empty"
                android:textColor="#FE5F55"
                android:textSize="75sp"
                app:layout_column="4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/divider7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_row="0" />

            <View
                android:id="@+id/divider7"
                android:layout_width="15dp"
                android:layout_height="140dp"
                android:background="#EEF5DB"
                app:layout_column="1"
                app:layout_constraintStart_toEndOf="@+id/coord10"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_row="2" />

            <View
                android:id="@+id/divider3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="#EEF5DB"
                app:layout_column="1"
                app:layout_constraintStart_toEndOf="@+id/divider2"
                app:layout_constraintTop_toBottomOf="@+id/divider7"
                app:layout_row="1" />

            <View
                android:id="@+id/divider4"
                android:layout_width="100dp"
                android:layout_height="15sp"
                android:background="#EEF5DB"
                app:layout_column="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/divider3"
                app:layout_constraintTop_toBottomOf="@+id/coord20"
                app:layout_row="1" />

            <View
                android:id="@+id/divider8"
                android:layout_width="15dp"
                android:layout_height="140dp"
                android:background="#EEF5DB"
                app:layout_column="3"
                app:layout_constraintStart_toEndOf="@+id/coord01"
                app:layout_constraintTop_toBottomOf="@+id/divider10"
                app:layout_row="2" />

            <TextView
                android:id="@+id/coord01"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:background="#4F6367"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/empty"
                android:textColor="#FE5F55"
                android:textSize="75sp"
                app:layout_column="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider13"
                app:layout_row="2" />

            <TextView
                android:id="@+id/coord11"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:background="#4F6367"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/empty"
                android:textColor="#FE5F55"
                android:textSize="75sp"
                app:layout_column="2"
                app:layout_constraintStart_toEndOf="@+id/divider8"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                app:layout_row="2" />

            <View
                android:id="@+id/divider1"
                android:layout_width="15dp"
                android:layout_height="140dp"
                android:background="#EEF5DB"
                app:layout_column="3"
                app:layout_constraintStart_toEndOf="@+id/coord11"
                app:layout_constraintTop_toBottomOf="@+id/divider3"
                app:layout_row="0" />

            <TextView
                android:id="@+id/coord21"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:background="#4F6367"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/empty"
                android:textColor="#FE5F55"
                android:textSize="75sp"
                app:layout_column="4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/divider1"
                app:layout_constraintTop_toBottomOf="@+id/divider4"
                app:layout_row="2" />

            <View
                android:id="@+id/divider5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="#EEF5DB"
                app:layout_column="3"
                app:layout_constraintStart_toEndOf="@+id/divider14"
                app:layout_constraintTop_toBottomOf="@+id/divider8"
                app:layout_row="1" />

            <View
                android:id="@+id/divider11"
                android:layout_width="100dp"
                android:layout_height="15dp"
                android:background="#EEF5DB"
                app:layout_column="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/divider12"
                app:layout_constraintTop_toBottomOf="@+id/coord21"
                app:layout_row="3" />

            <TextView
                android:id="@+id/coord02"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:background="#4F6367"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/empty"
                android:textColor="#FE5F55"
                android:textSize="75sp"
                app:layout_column="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider14"
                app:layout_constraintVertical_bias="0.0"
                app:layout_row="4" />

            <View
                android:id="@+id/divider"
                android:layout_width="15dp"
                android:layout_height="140dp"
                android:background="#EEF5DB"
                app:layout_column="1"
                app:layout_constraintStart_toEndOf="@+id/coord02"
                app:layout_constraintTop_toBottomOf="@+id/divider5"
                app:layout_row="0" />

            <TextView
                android:id="@+id/coord12"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:background="#4F6367"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/empty"
                android:textColor="#FE5F55"
                android:textSize="75sp"
                app:layout_column="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/divider"
                app:layout_constraintTop_toBottomOf="@+id/divider6"
                app:layout_constraintVertical_bias="1.0"
                app:layout_row="4" />

            <View
                android:id="@+id/divider15"
                android:layout_width="15dp"
                android:layout_height="140dp"
                android:background="#EEF5DB"
                app:layout_column="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/coord12"
                app:layout_constraintTop_toBottomOf="@+id/divider12"
                app:layout_row="4" />

            <TextView
                android:id="@+id/coord22"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:background="#4F6367"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/empty"
                android:textColor="#FE5F55"
                android:textSize="75sp"
                app:layout_column="4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/divider15"
                app:layout_constraintTop_toBottomOf="@+id/divider11"
                app:layout_constraintVertical_bias="0.0"
                app:layout_row="4" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/titleid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/krona_one"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#4F6367"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boardid"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/turnid"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/krona_one"
        android:gravity="center"
        android:text="@string/textview"
        android:textColor="#4F6367"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleid"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button"
        android:layout_width="240dp"
        android:layout_height="59dp"
        android:layout_marginEnd="40dp"
        android:background="#FE5F55"
        android:fontFamily="@font/krona_one"
        android:onClick="newGame"
        android:shadowColor="#000000"
        android:text="@string/new_game"
        android:textColor="#EEF5DB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/turnid"
        app:layout_constraintVertical_bias="0.231" />

    <ImageButton
        android:id="@+id/replayid"
        android:layout_width="68dp"
        android:layout_height="59dp"
        android:layout_marginTop="16dp"
        android:background="#FE5F55"
        android:contentDescription="@string/replay"
        android:onClick="goBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/turnid"
        app:layout_constraintVertical_bias="0.045"
        app:srcCompat="@android:drawable/ic_menu_revert" />


</androidx.constraintlayout.widget.ConstraintLayout>